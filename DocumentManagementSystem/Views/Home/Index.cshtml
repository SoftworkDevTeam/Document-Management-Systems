<section class="login-content" style="margin-top:-100px">
    @*<div class="logo text-center">
            @*<img src="~/img/telnet_logo.png" alt="Telent logo" />
            <h2>Document Management System</h2>
        </div>*@
    <div class="login-box">
        <form method="post" id="loginForm" class="login-form">
            <h4 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>SIGN IN</h4>
            <h6 class="text-danger">@ViewBag.Message</h6>
            <div class="form-group">
                <label asp-for="Email" class="control-label">USERNAME</label>
                <input asp-for="Email" id="txtEmail" name="email" class="form-control" type="text" placeholder="Email" autofocus>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">PASSWORD</label>
                <input asp-for="Password" id="txtPassword" name="password" class="form-control" type="password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="utility">
                    <div class="animated-checkbox">

                        @*<p><a class="font-weight-bold text-primary" asp-controller="Home" asp-action="Register">Sign Up</a></p>*@
                    </div>
                    <p class="semibold-text mb-2"><a href="#" data-toggle="flip">Forgot Password ?</a></p>
                </div>
            </div>
            <div class="form-group btn-container">
                <button class="btn btn-primary btn-block"><i class="fa fa-sign-in fa-lg fa-fw"></i>SIGN IN</button>
            </div>
        </form>
        <form id="resetPasswordForm" class="forget-form">
            <h3 class="login-head"><i class="fa fa-lg fa-fw fa-lock"></i>Forgot Password ?</h3>
            <div class="form-group">
                <label class="control-label">EMAIL</label>
                <input asp-for="Password" id="txtResetPasswordEmail" class="form-control" type="text" placeholder="Email">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group btn-container">
                <button class="btn btn-primary btn-block"><i class="fa fa-unlock fa-lg fa-fw"></i>Send Confirmation Email</button>
            </div>
            <div class="form-group mt-3">
                <p class="semibold-text mb-0"><a href="#" data-toggle="flip"><i class="fa fa-angle-left fa-fw"></i> Back to Login</a></p>
            </div>
        </form>
    </div>
</section>

@section Scripts{
    <script type="text/javascript">
        // Login Page Flipbox control
        $('.login-content [data-toggle="flip"]').click(function () {
            $('.login-box').toggleClass('flipped');
            return false;
        });
    </script>
}