@inject SignInManager<ApplicationUser> signInManager;
@inject UserManager<ApplicationUser> userManager;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DocumentManagementSystem</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta http-equiv="content-type" content="text/html;charset=utf-8" />

    <meta name="description"
          content="Telnet Device Inventory application" />
    @*<title>Telnet Inventory - @Model.Title</title>*@
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    @*<script src="~/js/scripts/common/authRouth.js"></script>*@
    <!-- Main CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/main.css" />
    <!-- Font-icon css-->
    <link rel="stylesheet"
          type="text/css"
          href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link href="~/css/spinner.css" rel="stylesheet" />
</head>
<body class="app sidebar-mini rtl">
    <div id="spinner" class="loading d-none">Loading&#8230;</div>
    <!-- Navbar-->
    <header class="app-header">
        <a class="app-header__logo" asp-controller="Dashboard" asp-action="index">
            <img src="~/img/telnet_logo.png" width="170px" alt="Telent logo" />
        </a>

        <!-- Sidebar toggle button-->
        <a class="app-sidebar__toggle"
           href="#"
           data-toggle="sidebar"
           aria-label="Hide Sidebar"></a>
        <!-- Navbar Right Menu-->
        <ul class="app-nav">
            <li class="app-search">
                <input class="app-search__input" type="search" placeholder="Search" />
                <button class="app-search__button">
                    <i class="fa fa-search"></i>
                </button>
            </li>
            <!--Notification Menu-->
            <li class="dropdown">
                <a class="app-nav__item"
                   href="#"
                   data-toggle="dropdown"
                   aria-label="Show notifications">
                    <i class="fa fa-bell-o fa-lg"></i>
                </a>
                <ul class="app-notification dropdown-menu dropdown-menu-right">
                    <li class="app-notification__title">
                        You have 4 new notifications.
                    </li>
                    <div class="app-notification__content">
                        <li>
                            <a class="app-notification__item" href="javascript:;">
                                <span class="app-notification__icon">
                                    <span class="fa-stack fa-lg">
                                        <i class="fa fa-circle fa-stack-2x text-primary"></i><i class="fa fa-envelope fa-stack-1x fa-inverse"></i>
                                    </span>
                                </span>
                                <div>
                                    <p class="app-notification__message">
                                        Lisa sent you a mail
                                    </p>
                                    <p class="app-notification__meta">2 min ago</p>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a class="app-notification__item" href="javascript:;">
                                <span class="app-notification__icon">
                                    <span class="fa-stack fa-lg">
                                        <i class="fa fa-circle fa-stack-2x text-danger"></i><i class="fa fa-hdd-o fa-stack-1x fa-inverse"></i>
                                    </span>
                                </span>
                                <div>
                                    <p class="app-notification__message">
                                        Mail server not working
                                    </p>
                                    <p class="app-notification__meta">5 min ago</p>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a class="app-notification__item" href="javascript:;">
                                <span class="app-notification__icon">
                                    <span class="fa-stack fa-lg">
                                        <i class="fa fa-circle fa-stack-2x text-success"></i><i class="fa fa-money fa-stack-1x fa-inverse"></i>
                                    </span>
                                </span>
                                <div>
                                    <p class="app-notification__message">
                                        Transaction complete
                                    </p>
                                    <p class="app-notification__meta">2 days ago</p>
                                </div>
                            </a>
                        </li>
                        <div class="app-notification__content">
                            <li>
                                <a class="app-notification__item" href="javascript:;">
                                    <span class="app-notification__icon">
                                        <span class="fa-stack fa-lg">
                                            <i class="fa fa-circle fa-stack-2x text-primary"></i><i class="fa fa-envelope fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </span>
                                    <div>
                                        <p class="app-notification__message">
                                            Lisa sent you a mail
                                        </p>
                                        <p class="app-notification__meta">2 min ago</p>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a class="app-notification__item" href="javascript:;">
                                    <span class="app-notification__icon">
                                        <span class="fa-stack fa-lg">
                                            <i class="fa fa-circle fa-stack-2x text-danger"></i><i class="fa fa-hdd-o fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </span>
                                    <div>
                                        <p class="app-notification__message">
                                            Mail server not working
                                        </p>
                                        <p class="app-notification__meta">5 min ago</p>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a class="app-notification__item" href="javascript:;">
                                    <span class="app-notification__icon">
                                        <span class="fa-stack fa-lg">
                                            <i class="fa fa-circle fa-stack-2x text-success"></i><i class="fa fa-money fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </span>
                                    <div>
                                        <p class="app-notification__message">
                                            Transaction complete
                                        </p>
                                        <p class="app-notification__meta">2 days ago</p>
                                    </div>
                                </a>
                            </li>
                        </div>
                    </div>
                    <li class="app-notification__footer">
                        <a href="#">See all notifications.</a>
                    </li>
                </ul>
            </li>
            <!-- User Menu-->
            <li class="dropdown">
                <a class="app-nav__item"
                   href="#"
                   data-toggle="dropdown"
                   aria-label="Open Profile Menu">
                    <i class="fa fa-user fa-lg"></i>
                </a>
                <ul class="dropdown-menu settings-menu dropdown-menu-right">
                    <li>
                        <a class="dropdown-item" href="page-user.html"><i class="fa fa-cog fa-lg"></i>Settings</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="page-user.html"><i class="fa fa-user fa-lg"></i>Profile</a>
                    </li>
                    @if (signInManager.IsSignedIn(User))
                    {
                        <li>
                            <form method="post" asp-action="Logout" asp-controller="Account">
                                <button class="dropdown-item" id="btnLogout">
                                    <i class="fa fa-sign-out fa-lg"></i>
                                    Logout @*@User.Identity.Name*@

                                </button>
                            </form>
                        </li>
                    }
                    @*<li>
                        <button class="dropdown-item" id="btnLogout"><i class="fa fa-sign-out fa-lg"></i>Logout</button>
                    </li>*@
                </ul>
            </li>
        </ul>
    </header>
    <!-- Navbar-->
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        <div id="userProfile" class="app-sidebar__user">

        </div>
        <script id="userProfileTemplate" type="html/template">
            {{#userData}}
            <img class="app-sidebar__user-avatar"
                 src={{imageUrl}}
                 alt={{fullName}}
                 width="70"
                 height="70" />
            <div>
                <p class="app-sidebar__user-name">{{fullName}}</p>
                <p class="app-sidebar__user-designation">{{roleName}}</p>
            </div>
            {{/userData}}
        </script>
        <ul class="app-menu">
            @if (signInManager.IsSignedIn(User) && User.IsInRole("admin"))
            {
                <li>
                    <a class="app-menu__item " asp-controller="Dashboard" asp-action="Index">
                        <i class="app-menu__icon fa fa-dashboard"></i><span class="app-menu__label">Dashboard</span>
                    </a>
                </li>

                <li id="userManagement">
                    @*<a class="app-menu__item" asp-controller="User" asp-action="CreateUser">
            <i class="app-menu__icon fa fa-user"></i><span class="app-menu__label">User Management</span>
        </a>*@
                    <a class="app-menu__item" asp-controller="User" asp-action="CreateUser">
                        <i class="app-menu__icon fa fa-user"></i><span class="app-menu__label">Create User</span>
                    </a>
                    <a class="app-menu__item" asp-controller="User" asp-action="AllUsers">
                        <i class="app-menu__icon fa fa-user"></i><span class="app-menu__label">User List</span>
                    </a>
                </li>
                <li id="deviceManagement">
                    <a class="app-menu__item" asp-controller="Document" asp-action="AllPendingRequest">
                        <i class="app-menu__icon fa fa-cog"></i><span class="app-menu__label">Pending Request</span>
                    </a>
                </li>
                <li id="visitorManagement">
                    <a class="app-menu__item" asp-controller="Audit" asp-action="Index">
                        <i class="app-menu__icon fa fa-bell-o"></i><span class="app-menu__label">Audit Trail</span>
                    </a>
                </li>
                <li id="schedule" class="d-none">
                    <a class="app-menu__item" asp-controller="Schedule" asp-action="Index">
                        <i class="app-menu__icon fa fa-envelope"></i><span class="app-menu__label">Schedule Visit</span>
                    </a>
                </li>
                <li id="inventory" class="d-none">
                    <a class="app-menu__item" asp-controller="Inventory" asp-action="Index">
                        <i class="app-menu__icon fa fa-globe"></i><span class="app-menu__label">Inventory</span>
                    </a>
                </li>
                <li id="movement" class="d-none">
                    <a class="app-menu__item" asp-controller="Movement" asp-action="Index">
                        <i class="app-menu__icon fa fa-truck"></i><span class="app-menu__label">Movement</span>
                    </a>
                </li>

            }
            else if (signInManager.IsSignedIn(User) && User.IsInRole("user"))
            {
                <li>
                    <a class="app-menu__item " asp-controller="Dashboard" asp-action="Index">
                        <i class="app-menu__icon fa fa-dashboard"></i><span class="app-menu__label">Dashboard</span>
                    </a>
                </li>
                <li id="userManagement">
                    <a class="app-menu__item" asp-controller="Document" asp-action="CreateDocument">
                        <i class="app-menu__icon fa fa-envelope"></i><span class="app-menu__label">Create Document</span>
                    </a>
                </li>
            }

        </ul>
    </aside>
    <!-- Sidebar menu-->
    <main class="app-content">

        <div style="margin-top:0px">
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-dashboard"></i> Document Management System</h1>
                    @*<p>Pending Document</p>*@
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                </ul>
            </div>
            @RenderBody()
        </div>
    </main>

    <!--Delete modal-->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-dark" id="exampleModalLabel">Delete Item</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="deleteModalBody" class="modal-body">





                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary btn-md" data-dismiss="modal">Close</button>
                    <button id="deleteButton" class="btn btn-danger btn-md">Delete</button>
                </div>
            </div>
        </div>
    </div>


    <hr />
    <!-- Essential javascripts for application to work-->
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="~/js/plugins/pace.min.js"></script>
    <!-- Page specific javascripts-->
    <script type="text/javascript" src="~/js/plugins/chart.js"></script>

    <!-- jquery table -->
    <script type="text/javascript" src="~/js/plugins/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/js/plugins/dataTables.bootstrap.min.js"></script>

    <!-- axios library -->
    <script src="~/js/plugins/axios.min.js"></script>

    <!-- Mustache template engine -->
    <script src="~/js/plugins/mustache.min.js"></script>
    <!-- common scripts -->
    <script src="~/js/scripts/common/repository.js"></script>

    @*select2*@
    <script src="~/js/select2.min.js"></script>

    <!--Date time picker-->
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>

    <!-- Date time picker-->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <!--Bootstrap notify-->
    <script src="~/js/plugins/bootstrap-notify.min.js"></script>
    <!-- Jquery Validation-->
    <script src="~/js/plugins/jquery.validate.min.js"></script>
    <!--Set user data from local storage-->
    <script src="~/js/scripts/common/setUserData.js"></script>

    <script src="~/js/scripts/common/logout.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
