    <div class=" col-lg-6">
        <form method="post" class="login-form" enctype="multipart/form-data">
            <input hidden asp-for="RequestBy" />
            <h4 class="login-head"><i class="fa fa-lg fa-fw fa-envelope"></i>Create Document</h4>
            <h6 class="text-danger">@ViewBag.Message</h6>
            <div class="form-group">
                <label asp-for="DocumentTypeId"></label>
                <div class="col-sm-10">
                    <select asp-for="DocumentTypeId" asp-items="@(new SelectList (Model.DocumentTypes,"Id","Type" ))" class="custom-select mr-sm-2">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="DocumentTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Document"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input type="file" asp-for="Document" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose File....</label>
                    </div>
                    <span asp-validation-for="Document" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" type="text" placeholder="Enter Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group btn-container col-sm-10">
                <button class="btn btn-primary btn-block"><i class="fa fa-envelope fa-lg fa-fw"></i>Create</button>
            </div>
            @section Scripts{
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var filename = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(filename);
                        });
                    });
                </script>
            }
        </form>

    </div>
</section>
